{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/svg.d.ts"]
}
